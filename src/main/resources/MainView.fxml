<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.projectx.controller.MainController"
            style="-fx-background-image: url('assets/background.jpg');
                -fx-background-repeat: no-repeat;
                -fx-background-size: cover;
                -fx-background-position: center center;">

    <!-- Centered Label -->
    <Label fx:id="welcomeLabel" text="Hi Debarima!"
           style="-fx-font-size: 56px; -fx-font-weight: bold; -fx-text-fill: white;"
           AnchorPane.topAnchor="350.0"
           AnchorPane.leftAnchor="0.0"
           AnchorPane.rightAnchor="0.0"
           alignment="CENTER"
           opacity="0.0"/>

    <Label fx:id="subtitleLabel" text="Wanna explore this little world with me?"
           style="-fx-font-size: 56px; -fx-font-weight: bold; -fx-text-fill: white;"
           AnchorPane.topAnchor="350.0"
           AnchorPane.leftAnchor="0.0"
           AnchorPane.rightAnchor="0.0"
           alignment="CENTER"
           opacity="0.0"/>

    <!-- Centered Button -->
    <Button fx:id="startButton" text="Yay!"
            styleClass="neon-button"
            AnchorPane.topAnchor="400.0"
            prefWidth="100"
            layoutX="450"
            layoutY="280"
            opacity="0.0"/>

    <Button fx:id="nayButton" text="Nay!"
            styleClass="neon-button"
            AnchorPane.topAnchor="400.0"
            prefWidth="100"
            layoutX="600"
            layoutY="280"
            opacity="0.0"/>

</AnchorPane>
