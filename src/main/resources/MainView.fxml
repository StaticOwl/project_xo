<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.projectx.controller.MainController"
            prefWidth="400" prefHeight="300"
            style="-fx-background-image: url('assets/background.jpg');
                   -fx-background-size: cover;
                   -fx-background-position: center;">

    <!-- Centered Label -->
    <Label text="Welcome to Project X"
           style="-fx-font-size: 24px; -fx-font-weight: bold;"
           AnchorPane.topAnchor="200.0"
           AnchorPane.leftAnchor="0.0"
           AnchorPane.rightAnchor="0.0"
           prefWidth="400"
           alignment="CENTER"/>

    <!-- Centered Button -->
    <Button text="START" fx:id="startButton"
            AnchorPane.topAnchor="280.0"
            AnchorPane.leftAnchor="450.0"
            AnchorPane.rightAnchor="450.0"
            prefWidth="20"/>

</AnchorPane>
