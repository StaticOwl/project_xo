<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.projectx.controller.TilesController"
            prefWidth="1200" prefHeight="800">

    <Label text="Find the Right Tile!"
           style="-fx-font-size: 28px; -fx-font-weight: bold;"
           AnchorPane.topAnchor="50.0"
           AnchorPane.leftAnchor="0.0"
           AnchorPane.rightAnchor="0.0"
           alignment="CENTER"/>

    <GridPane fx:id="gameGrid"
              hgap="20" vgap="20"
              AnchorPane.topAnchor="200.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              alignment="CENTER"/>

    <Label fx:id="feedbackMessage"
           style="-fx-text-fill: red; -fx-font-size: 16px;"
           AnchorPane.bottomAnchor="100.0"
           AnchorPane.leftAnchor="0.0"
           AnchorPane.rightAnchor="0.0"
           alignment="CENTER"/>

</AnchorPane>
