<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            style="-fx-background-image: url('assets/tiles_bg.jpg');
                -fx-background-repeat: no-repeat;
                -fx-background-size: cover;
                -fx-background-position: center center;"
            fx:controller="com.projectx.controller.TilesController"
            prefWidth="1200" prefHeight="800">

    <Label text="Find the Right Tile!"
           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #74fa58"
           AnchorPane.topAnchor="50.0"
           AnchorPane.leftAnchor="0.0"
           AnchorPane.rightAnchor="0.0"
           alignment="CENTER"/>

    <GridPane fx:id="gameGrid"
              hgap="20" vgap="20"
              AnchorPane.topAnchor="200.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              alignment="CENTER"/>

    <Label fx:id="feedbackMessage"
           style="-fx-text-fill: red; -fx-font-size: 16px;"
           AnchorPane.bottomAnchor="100.0"
           AnchorPane.leftAnchor="0.0"
           AnchorPane.rightAnchor="0.0"
           alignment="CENTER"/>

    <fx:include fx:id="overlayPane" source="Overlay.fxml"/>

</AnchorPane>
