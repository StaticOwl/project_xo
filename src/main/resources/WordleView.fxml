<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="708.0" prefWidth="950.0"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.projectx.controller.WordleController">

    <!-- Title -->
    <Label text="Wordle Game"
           style="-fx-font-size: 28px; -fx-font-weight: bold;"
           AnchorPane.topAnchor="50.0"
           AnchorPane.leftAnchor="0.0"
           AnchorPane.rightAnchor="0.0"
           alignment="CENTER"/>

    <!-- Word Grid -->
    <GridPane fx:id="wordGrid"
              hgap="10" vgap="10"
              AnchorPane.topAnchor="150.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              alignment="CENTER"/>

    <!-- Submit Button -->
    <Button fx:id="wordleSubmit"
            prefWidth="200" prefHeight="50"
            style="-fx-font-size: 18px;"
            text="Submit"
            AnchorPane.topAnchor="650.0"
            AnchorPane.leftAnchor="0.0"
            AnchorPane.rightAnchor="0.0"
            alignment="CENTER"/>

    <fx:include fx:id="overlayPane" source="Overlay.fxml"/>

</AnchorPane>
