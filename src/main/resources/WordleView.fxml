<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="708.0" prefWidth="950.0"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.projectx.controller.WordleController">

    <!-- Title -->
    <Label text="Wordle Game"
           style="-fx-font-size: 28px; -fx-font-weight: bold;"
           AnchorPane.topAnchor="50.0"
           AnchorPane.leftAnchor="0.0"
           AnchorPane.rightAnchor="0.0"
           alignment="CENTER"/>

    <!-- Word Grid -->
    <GridPane fx:id="wordGrid"
              hgap="10" vgap="10"
              AnchorPane.topAnchor="150.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              alignment="CENTER"/>

    <!-- Submit Button -->
    <Button fx:id="wordleSubmit"
            prefWidth="200" prefHeight="50"
            style="-fx-font-size: 18px;"
            text="Submit"
            AnchorPane.topAnchor="650.0"
            AnchorPane.leftAnchor="0.0"
            AnchorPane.rightAnchor="0.0"
            alignment="CENTER"/>

    <!-- Overlay Popup (Initially Hidden) -->
    <StackPane fx:id="overlayPane"
               prefWidth="950" prefHeight="708"
               style="-fx-background-color: rgba(0, 0, 0, 0.5);"
               opacity="0"
               visible="false"
               AnchorPane.leftAnchor="0.0"
               AnchorPane.rightAnchor="0.0"
               AnchorPane.topAnchor="0.0"
               AnchorPane.bottomAnchor="0.0">

        <VBox spacing="20" alignment="CENTER"
              style="-fx-background-color: white; -fx-padding: 20px; -fx-border-radius: 10px;">
            <Label fx:id="overlayMessage" text="Game Over!"
                   style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Button fx:id="overlayButton" text="Close"
                    style="-fx-font-size: 18px;"/>
        </VBox>
    </StackPane>

</AnchorPane>
